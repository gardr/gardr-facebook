{
  "name": "gardr-fb-plugin",
  "version": "1.0.0",
  "description": "Simple Gardr project wihch securly frame Facebook SDK widgets",
  "main": "lib/index.js",
  "scripts": {
    "package-ext": "./node_modules/.bin/browserify -s ext samples/extBundle.js -o dist/ext.js",
    "package-host": "./node_modules/.bin/browserify -s fbHost src/hostBundle.js -o dist/fbHost.js",
    "package-renderer": "./node_modules/.bin/browserify src/fb-renderer.js -s fbRender -o dist/renderBundle.js",
    "package": "npm run package-ext | npm run package-host | npm run package-renderer",
    "start": "./bin/setupSample.sh",
    "test": ""
  },
  "keywords": [
    "gardr",
    "facebook"
  ],
  "author": "Espen Dall√∏kken",
  "license": "MIT",
  "dependencies": {
    "browserify": "^6.2.0",
    "gardr-ext": "^0.6.0",
    "gardr-host": "^0.6.0",
    "query-params": "0.0.1"
  },
  "devDependencies": {
    "http-server": "^0.7.2",
    "karma": "^0.12.24",
    "karma-browserifast": "^0.7.0",
    "karma-referee": "0.1.0",
    "karma-chrome-launcher": "0.1.4",
    "karma-coffee-preprocessor": "0.2.1",
    "karma-firefox-launcher": "0.1.3",
    "karma-html2js-preprocessor": "0.1.0",
    "karma-mocha": "0.1.4",
    "karma-phantomjs-launcher": "0.1.4",
    "mocha": "^2.0.1"
  }
}
